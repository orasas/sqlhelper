{
  "manifest_version": 3,
  "name": "ChatGPT SQL Helper",
  "version": "1.01",
  "description": "Generate Snowflake SQL queries using ChatGPT",
  "action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html",
    "default_title": "ChatGPT SQL Query Generator"
  },
  "icons": {
    "48": "icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
  }
}
